{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",             // Enable support for ESNext modules
    "moduleResolution": "node",     // Properly resolves ES modules from node_modules
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}